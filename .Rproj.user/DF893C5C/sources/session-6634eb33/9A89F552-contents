        <style>
        /* 主标题居中 */
        .title {
          text-align: center;
        }

        /* 轮播容器 */
        .hero-carousel {
          position: relative;
          width: 100%;
          height: 100vh;
          overflow: hidden;
          margin-bottom: 2rem;
          opacity: 0;
          transition: opacity 1s ease-in-out;
        }

        .hero-carousel .slides {
          display: flex;
          width: 100%;
          height: 100%;
          transition: transform 0.6s ease-in-out;
          will-change: transform;
        }

        .hero-carousel .slide {
          position: relative;
          min-width: 100%;
          height: 100%;
          flex-shrink: 0;
        }

        .hero-carousel .slide img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          display: block;
        }

        .hero-carousel .slide::before {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-color: rgba(0, 0, 0, 0);
          transition: background-color 0.6s ease-in-out;
          pointer-events: none;
          z-index: 1;
        }

        .hero-carousel .slide.active::before {
          background-color: rgba(0, 0, 0, 0.4);
        }

        .hero-carousel .caption {
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          color: white;
          font-size: 3rem;
          font-weight: bold;
          text-align: center;
          text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
          opacity: 0;
          transition: opacity 1s ease-in-out;
          transition-delay: 1s;
          z-index: 2;
          text-decoration: none;
        }

        .hero-carousel .slide.active .caption {
          opacity: 1;
        }

        .hero-carousel .caption:hover {
          color: #ddd;
        }
        </style>

        <script>
        document.addEventListener('DOMContentLoaded', function() {
          const imageSources = [
            "images/合影01.jpg",
            "images/cell01.jpg",
            "images/cell02.jpg"
          ];

          const captions = [
            "Meet us",
            "Research",
            "Gallery"
          ];

          const links = [
            "team.html",
            "research.html",
            "publications.html"
          ];

          const loadPromises = imageSources.map(src => {
            return new Promise((resolve, reject) => {
              const img = new Image();
              img.src = src;
              img.onload = () => resolve(src);
              img.onerror = () => reject(new Error(`Failed to load image: ${src}`));
            });
          });

          Promise.all(loadPromises).then(() => {
            const carousel = document.createElement('div');
            carousel.className = 'hero-carousel';
            carousel.style.opacity = '0';

            const slidesContainer = document.createElement('div');
            slidesContainer.className = 'slides';

            imageSources.forEach((src, i) => {
              const slide = document.createElement('div');
              slide.className = 'slide';

              const img = document.createElement('img');
              img.src = src;
              img.alt = `Slide ${i + 1}`;

              const captionLink = document.createElement('a');
              captionLink.className = 'caption';
              captionLink.href = links[i];
              captionLink.textContent = captions[i];

              slide.appendChild(img);
              slide.appendChild(captionLink);
              slidesContainer.appendChild(slide);
            });

            carousel.appendChild(slidesContainer);
            document.body.prepend(carousel);

            setTimeout(() => {
              let currentIndex = 0;
              const total = imageSources.length;
              const slides = slidesContainer.querySelectorAll('.slide');

              function updateSlidePosition() {
                slidesContainer.style.transform = `translateX(-${currentIndex * 100}%)`;
                slides.forEach((slide, i) => {
                  if (i === currentIndex) {
                    slide.classList.add('active');
                  } else {
                    slide.classList.remove('active');
                  }
                });
              }

              updateSlidePosition();

              requestAnimationFrame(() => {
                carousel.style.opacity = '1';
              });

              setInterval(() => {
                currentIndex = (currentIndex + 1) % total;
                updateSlidePosition();
              }, 4000);
            }, 50);
          }).catch(err => {
            console.error('Image preloading failed:', err);
          });
        });
        </script>
resources:
